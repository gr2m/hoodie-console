.prompt-actions
    display none

    position absolute
    height 60px
    bottom 0
    left 0
    right 0

    background #eee

    button
        border 0
        margin 10px 0 10px 10px
        padding 0 10px

        background #000
        color #fff
        line-height 40px

.prompt-has-focus .prompt-actions
    display block
