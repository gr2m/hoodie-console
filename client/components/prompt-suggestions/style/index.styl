.prompt-suggestions
    display none
    padding 10px

    > ul > li
        margin-right 10px;
        padding-bottom 10px;
        max-width 100%
        overflow auto

    ul
        padding 0
        margin 0
    li
        display inline-block
        white-space nowrap

        .name
            display inline-block
            padding 0 10px
            border-right 1px solid #fff

            background #000
            color #fff
            cursor pointer
            line-height 40px
        ul
            display inline-block
        li
            .name
                background  #666
            li
                .name
                    background  #999

.prompt-has-focus .prompt-suggestions
    display block
